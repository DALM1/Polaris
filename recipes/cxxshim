name=cxxshim
from_source=cxxshim
revision=1
imagedeps="meson ninja-build"
hostdeps="pkg-config"

build() {
    meson_configure \
        --includedir=share/cxxshim/include \
        -Dinstall_headers=true

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
